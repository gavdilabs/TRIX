<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover showHeader="false" class="sapUiContentPadding" placement="Auto">
        <beginButton>
            <Button text="Cancel" type="Cancel" press="handleCloseButton" />
        </beginButton>
        <endButton>
            <Button text="Save" type="Emphasized" press="handleCloseButton" />
        </endButton>
        <content>
            <VBox>
                <Tree mode="SingleSelectMaster" items="{path: 'TreeAllocations>/'}">
                    <StandardTreeItem type="{=${TreeAllocations>InacisSelectabletive} ? 'Active' : 'Inactive'}" title="{TreeAllocations>text}"/>
                </Tree>
            </VBox>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>