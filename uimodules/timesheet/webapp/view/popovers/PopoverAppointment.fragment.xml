<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover title="Create New Timeregistration" class="sapUiContentPadding" placement="Auto">
        <beginButton>
            <Button text="Action-A" press="handleCloseButton" />
        </beginButton>
        <endButton>
            <Button text="Action-B" press="handleCloseButton" />
        </endButton>
        <content>
            <VBox>
                <Select items="{ListAllocationTypes>/}">
                    <core:Item key="{ListAllocationTypes>key}" text="{ListAllocationTypes>value}" />
                </Select>
                <Select items="{ListAllocationSubTypes>/}">
                    <core:Item key="{ListAllocationSubTypes>ID}" text="{ListAllocationSubTypes>description}" />
                </Select>
            </VBox>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>