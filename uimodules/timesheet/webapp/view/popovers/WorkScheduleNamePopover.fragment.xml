<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover placement="Right" showHeader="false" contentWidth="15rem">
        <VBox alignItems="Center" class="sapUiTinyMargin">
            <Label text="New Work Schedule" showColon="true"/>
            <Input id="WorkScheduleInput" width="100%" placeholder="Enter name of new Work Schedule">
                <layoutData>
                    <FlexItemData growFactor="1" minWidth="100%"/>
                </layoutData>
            </Input>
            <Button text="{i18n>txt_confirm}" press="onAddNewWorkSchedule"/>
        </VBox>
    </ResponsivePopover>
</core:FragmentDefinition>