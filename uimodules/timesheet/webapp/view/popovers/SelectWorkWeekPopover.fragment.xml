<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover placement="Right" showHeader="false" contentWidth="15rem">
        <VBox alignItems="Center" class="sapUiTinyMargin">
            <Label text="Select Work Schedule" showColon="true"/>
            <Select id="WorkWeekSelect" width="100%" items="{/WorkWeekSet}">
                <items>
                    <core:Item key="{ID}" text="{name}"/>
                </items>
                <layoutData>
                    <FlexItemData growFactor="1" minWidth="100%"/>
                </layoutData>
            </Select>
            <Button text="{i18n>txt_confirm}" press="onAddExistingWorkSchedule"/>
        </VBox>
    </ResponsivePopover>
</core:FragmentDefinition>