<mvc:View controllerName="trix.timesheet.controller.Main" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" core:require="{
		formatter: 'trix/timesheet/model/formatter'
	}"
	xmlns:controls="trix.timesheet.controls"
	xmlns:unified="sap.ui.unified">

	<Page title="{i18n>appTitle}" id="page">
		<content>
			<controls:TRIXCalendar appointments="{path:'PeriodRegistrations>/'}" title= "TRIXY TRIX">
				<controls:appointments>
					<unified:CalendarAppointment title="{PeriodRegistrations>allocation/description}" text="{PeriodRegistrations>allocation/description}" startDate="{PeriodRegistrations>startDate}" endDate="{PeriodRegistrations>endDate}">
					</unified:CalendarAppointment>
				</controls:appointments>
			</controls:TRIXCalendar>
		</content>
	</Page>

</mvc:View>
