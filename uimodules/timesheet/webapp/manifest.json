{
	"_version": "1.12.0",

	"sap.app": {
		"id": "trix.timesheet",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "${version}"
		},
		"dataSources": {
			"coreData": {
				"uri": "/odata/core/",
				"type": "OData",
				"settings": {
					"annotations": [],
					"odataVersion": "4.0"
				}
			},
			"ApplicationModelSource": {
				"uri": "model/ApplicationModel.json",
				"type": "JSON"
			}
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "trix.timesheet.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},

		"dependencies": {
			"minUI5Version": "1.121.0",
			"libs": {
				"sap.ui.core": {},
				"sap.ui.comp": {},
				"sap.uxap": {},
				"sap.m": {},
				"sap.f": {}
			}
		},

		"handleValidation": true,

		"contentDensities": {
			"compact": true,
			"cozy": true
		},

		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "trix.timesheet.i18n.i18n"
				}
			},
			"ApplicationModel": {
				"type": "sap.ui.model.json.JSONModel",
				"dataSource": "ApplicationModelSource"
			},
			"": {
				"dataSource": "coreData",
				"preload": true,
				"type": "sap.ui.model.odata.v4.ODataModel",
				"settings": {
					"synchronizationMode": "None",
					"operationMode": "Server",
					"autoExpandSelect": true,
					"earlyRequests": true,
					"groupId": "$direct"
				}
			}
		},

		"resources": {
			"css": [
				{
					"uri": "css/style.css"
				}
			]
		},

		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "trix.timesheet.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "main",
					"target": "main"
				}
			],
			"targets": {
				"main": {
					"viewId": "main",
					"viewName": "Main"
				}
			}
		}
	}
}
