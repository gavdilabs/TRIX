{
  "name": "trix-core-service",
  "version": "1.0.0",
  "description": "Time Registration - Core Service",
  "license": "UNLICENSED",
  "scripts": {
    "start": "cds-serve",
    "dev": "cds-ts watch",
    "dev:psql": "cds-ts watch --profile pg",
    "debug": "cds-ts run",
    "debug:psql": "cds-ts run --profile pg",
    "test": "jest",
    "coverage": "nyc npm run test",
    "lint": "eslint . --ext .ts --fix",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "run-s build:clean build:cds clean:ts build:ts",
    "build:prod": "run-s build:clean build:cds:prod cleanup:ts build:ts",
    "build:cds": "cds build && npm run build:cp",
    "build:cds:prod": "npx cds build --production",
    "build:types": "npx @cap-js/cds-typer '*' --outputDirectory ./@cds-models",
    "build:clean": "npx rimraf gen",
    "db:load": "cds deploy --profile pg",
    "cleanup:ts": "npx rimraf gen/srv/srv/**/**/*.ts",
    "build:mta": "mbt build --mtar archive.mtar",
    "build:ts": "echo 'Compiling TypeScript sources...' && tsc",
    "build:cp": "shx cp .npmrc gen/srv",
    "deploy": "run-s build:prod build:mta deploy:cf",
    "deploy:cf": "cf deploy mta_archives/archive.mtar"
  },
  "dependencies": {
    "@cap-js/postgres": "^1.4.1",
    "@cap-js/telemetry": "^0.0.4",
    "@dxfrontier/cds-ts-dispatcher": "^1.0.3",
    "@gavdi/cap-service-core": "^1.1.6",
    "@gavdi/caplog": "^2.4.6",
    "@grpc/grpc-js": "^1.10.1",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.48.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.48.0",
    "@sap-cloud-sdk/connectivity": "^3.12.1",
    "@sap-cloud-sdk/http-client": "^3.10.0",
    "@sap-cloud-sdk/resilience": "^3.10.0",
    "@sap-cloud-sdk/util": "^3.10.0",
    "@sap/cds": "^7.6.3",
    "@sap/xsenv": "^3.2.2",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.16.0",
    "@cap-js/sqlite": "^1",
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "@types/jwt-decode": "^3.1.0",
    "@types/node": "^18.7.13",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chai-subset": "^1.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mbt": "^1.2.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.2"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "cds": {
    "requires": {
      "[development]": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "url": ":memory:"
          }
        }
      },
      "cats": {
        "kind": "odata",
        "model": "srv/external/cats",
        "[production]": {
          "credentials": {
            "destination": "CATS"
          }
        }
      },
      "workcal": {
        "kind": "rest",
        "[production]": {
          "credentials": {
            "destination": "WorkCalendarService"
          }
        }
      },
      "[production]": {
        "auth": "xsuaa"
      }
    }
  }
}
